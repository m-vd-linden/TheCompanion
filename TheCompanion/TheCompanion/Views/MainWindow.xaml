<Window x:Class="TheCompanion.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TheCompanion.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Icon="pack://application:,,,/Resources/Logo.png">
    <Grid Background="#c6e1ec">
        <TabControl Name="tab_Main" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Background="#c6e1ec" SelectionChanged="Tab_Main_SelectionChanged" Margin="0,-24,0,0">
            <TabItem Header="Home" Background="#c6e1ec">
                <ScrollViewer Background="Transparent" VerticalScrollBarVisibility="Auto">
                    <Grid Name="grid_Robots">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                    </Grid>
                </ScrollViewer>
            </TabItem>
            <TabItem Header="Robot" Background="#c6e1ec">
                <Grid Name="grid_Modules">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="33*"/>
                        <ColumnDefinition Width="33*"/>
                        <ColumnDefinition Width="33*"/>
                    </Grid.ColumnDefinitions>
                    <DockPanel Name="stack_ImgChallengeButton" Grid.Column="1" >
                        <Button Name="btn_Challenges" Content="Challenges" FontSize="20" Height="40" DockPanel.Dock="Top" Click="btn_Challenges_Click"/>
                        <Image Name="img_RobotPicture" Source="pack://application:,,,/Resources/Robotje.jpg" VerticalAlignment="Top" HorizontalAlignment="Stretch" DockPanel.Dock="Top" Stretch="Fill"/>
                    </DockPanel>
                    <!--<StackPanel Name="stack_ImgChallengeButton" Grid.Column="1">
                    </StackPanel>-->
                </Grid>
            </TabItem>
            <TabItem Header="Stats" Background="#c6e1ec">
                <Grid Background="#c6e1ec"/>
            </TabItem>
            <TabItem Header="Challenges" Background="#c6e1ec">
                <Grid Background="#c6e1ec"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
